<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunji.titanrtx.manager.dao.mapper.auto.WhiteListMapper">



    <select id="selectAll"  resultType="com.yunji.titanrtx.manager.dao.entity.auto.FilterEntity">
      SELECT * FROM white_list s  order by s.updateTime desc
    </select>


    <delete id="deleteById">
        delete from white_list where id = #{id}
    </delete>


    <insert id="insert">
        insert into white_list (domain,path)
        values (#{domain},#{path})
        <selectKey resultType="Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="findById" resultType="com.yunji.titanrtx.manager.dao.entity.auto.FilterEntity">
        SELECT * FROM white_list s where s.id = #{id}
    </select>


    <update id="update">
        update white_list s set
                             s.domain =#{domain},
                             s.path =#{path},
                             s.updateTime = now()
        where s.id = #{id}
    </update>

</mapper>

